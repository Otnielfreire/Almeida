Algoritmo "Dia_da_Semana"

Var
   dia : inteiro

Inicio
   Escreva("Digite um número de 1 a 7: ")
   Leia(dia)
   
escolha dia
   caso 1
   Escreva("Domingo")
   caso 2
   Escreva("Segunda-feira")
   caso 3
   Escreva("Terça-feira")
   caso 4
   Escreva("Quarta-feira")
   caso 5
   Escreva("Quinta-feira")
   caso 6
   Escreva("Sexta-feira")
   caso 7
   Escreva("Sábado")

fimescolha

Fimalgoritmo